{% extends 'MairieVoreppeDemandeTravauxBundle::layout.html.twig' %}

{% block main_content %}
 <section class="table-responsive">
    <hr/>
    <caption>
        <h1>Maire de {{ mairie.raisonSociale }}</h1>
    </caption>
    <table class="table table-bordered table-striped table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Notedivers</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Telmobile</th>
                <th>Email</th>
                <th>Telfixe</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('maire_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.noteDivers }}</td>
                    <td>{{ entity.nom }}</td>
                    <td>{{ entity.prenom }}</td>
                    <td>{{ entity.telMobile }}</td>
                    <td>{{ entity.email }}</td>
                    <td>{{ entity.telFixe }}</td>
                    <td>
                    <ul>
                        <li>
                            <a href="{{ path('maire_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('maire_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                    </td>
                </tr>
            {% else %}
                Aucun maire dans cette mairie.
            {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('periode_new', {'id' : mairie.id} ) }}">
                Cr√©er un maire pour cette mairie !
            </a>
        </li>
    </ul>
    {% endblock %}
