{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Maire list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Notedivers</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Telmobile</th>
                <th>Email</th>
                <th>Telfixe</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('maire_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.noteDivers }}</td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.prenom }}</td>
                <td>{{ entity.telMobile }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.telFixe }}</td>
                <td>                
                <ul class="list-unstyled list-inline">
                    <li>
                        <a class="btn btn-info" href="{{ path('maire_show', { 'id': entity.id }) }}">Voir</a>
                    </li>
                    <li>
                        <a class="btn btn-success" href="{{ path('maire_edit', { 'id': entity.id }) }}">Modifier</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('maire_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
