{% extends '::base.html.twig' %}

{% block body -%}
 <div class="row">    

    <div class="col-lg-10 table-responsive">
        <hr/>
        <caption>
             <h1>Liste des arrêtés promulgués</h1>
         </h4>
        </caption>
        <table class="records_list table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Numéro téléservice de la DICT</th>
                    <th>Date création</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('arretepromulgue_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.dict.numeroTeleservice }}</td>
                    <td>{% if entity.dateCreation %}{{ entity.dateCreation|localizeddate('medium', 'none', "fr") }}{% endif %}</td>
                    <td>
                    <ul class="list-unstyled list-inline">
                        <li>
                            <a class="btn btn-info" href="{{ path('arretepromulgue_show', { 'id': entity.id }) }}">Voir <i class="fa fa-eye"></i></a>
                        </li>
                        <li>
                            <a class="btn btn-success" href="{{ path('arretepromulgue_edit', { 'id': entity.id }) }}">Modifier <i class="fa fa-pencil"></i></a>
                        </li>
                    </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
