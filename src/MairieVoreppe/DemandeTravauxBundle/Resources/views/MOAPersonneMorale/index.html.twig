{% extends 'MairieVoreppeDemandeTravauxBundle:MaitreOuvrage:layout.html.twig' %}

 {% block moa_content %}

 <section class="table-responsive">
    <hr/>
    <caption>
        <h1>Liste MOA - personne morale</h1>
    </caption>
    <table class="table table-bordered table-striped table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Raison sociale</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('moapersonnemorale_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.personneMorale is instanceof('MairieVoreppe\\DemandeTravauxBundle\\Entity\\Entreprise') %}
                    Entreprise
                {% endif %}</td>

                <td>{{ entity.personneMorale.raisonSociale }}</td>
                <td>
                <ul class="list-unstyled list-inline">
                    <li>
                        <a class="btn btn-info  btn3d" href="{{ path('moapersonnemorale_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-eye-open"></span> Voir</a>
                    </li>
                    <li>
                        {% if entity.personneMorale is instanceof('MairieVoreppe\\DemandeTravauxBundle\\Entity\\Entreprise') %}
                             <a class="btn btn-success btn3d" href="{{ path('moapersonnemorale_edit_entreprise', { 'id': entity.id }) }}"><i class="fa fa-pencil-square-o"></i>modifier</a>
                        {% endif %}
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</section>
    {% endblock %}
