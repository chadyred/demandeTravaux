{# src/MairieVoreppe/DemandeTravauxBundle/Resources/views/ArreteModel/index.html.twig #}
{% extends "::base.html.twig" %}
{% block corps %}
    
    

 <div class="row">    

    <div class="col-lg-10 table-responsive">
        <hr/>
        <caption>
             <h1>Liste des modèles d'arrêté</h1>
        </caption>
        <table class="records_list table table-bordered table-striped table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('arretemodel_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.titre }}</td>
                <td>{{ entity.contenu|striptags|length > 50 ?  entity.contenu|striptags|truncate(50, true, "...")|raw  : entity.contenu|striptags|raw }}</td>               
                <td>
                    <ul class="list-unstyled list-inline">
                        <li>
                            <a class="btn btn-info" href="{{ path('arretemodel_show', { 'id': entity.id }) }}">Voir <i class="fa fa-eye"></i></a> 
                        </li>
                        <li>
                            <a  class="btn btn-success" href="{{ path('arretemodel_edit', { 'id': entity.id }) }}">Modifier <i class="fa fa-pencil"></i></a> 
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>  
    
</div>  
    <ul class="list-unstyled">
        <li>
            <a class="btn btn-success" href="{{ path('arretemodel_new') }}">
                Créer un nouveau modèle <i class="fa fa-plus"></i>
            </a>
        </li>
    </ul>
    {# On affiche également les arrêté promulgués #}
    {{ render(controller("MairieVoreppeDemandeTravauxBundle:ArretePromulgue:index")) }}
    {% endblock %}
